            android:id="@+id/text2"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
