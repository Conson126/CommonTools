            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text4"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text5"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text6"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text7"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>